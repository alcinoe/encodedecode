# import base64 module
import base64

answer = str(input("Would you like to Encode or Decode?"))

# Here is where you enter what needs to be encoded or decoded
secret = input("Please enter a secret: ")
if answer in ["encode"]:
    encoded = base64.b64encode(bytes('your string', 'utf-8'))
    print(encoded, "\n\n\n Press Any Button to Continue")

if answer in ["decode"]:
    decoded = base64.b64decode(secret).decode("utf-8")
    print(decoded, "\n\n\n Press Any Button to Continue")
